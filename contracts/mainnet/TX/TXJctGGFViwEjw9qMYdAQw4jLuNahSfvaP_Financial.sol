contract Financial  is Ownable{
	using SafeMath for uint256;

    address ownerAddress;
    
    //token address
    address usdtAddress;

    // min Investment threshold
    uint256 private constant _minInvestmentThreshold = 10 * 10 ** 18;

    //total financial
    uint256 private total_financial;

    //financial total num
    uint256 private total_num;

    constructor(address _usdtAddress){
        ownerAddress = msg.sender;
        usdtAddress = _usdtAddress;
    }

    struct User {
        address account;
        //total financial amount
        uint256 total_financial;
        //total financial num
        uint256 financial_num;
        // latest financial amount
        uint256 latest_financial;
        // total redemptions amount
        uint256 total_redemptions;
        // total redemptions num
        uint256 redemptions_num;
        // latest financial redemptions
        uint256 latest_redemptions;
    }

    // Iterable mapping user financial amount;
    struct FinancialStorage {
        address[] keys;
        mapping(address => User) userInfo;
        mapping(address => bool) isFinancial;
    }

    FinancialStorage private _financialtorage;

    event FinancialEvent(address _address, uint256 _amount, uint256 _type);
    event BatchRedemptionEvent(address[] _address, uint256[] _amount);
    event RedemptionEvent(address _address, uint256 _amount);

    //financial
    function financial(uint256 _amount, uint256 _type) external{
		require(_amount >= _minInvestmentThreshold, 'the amount must be greater than 10 U ');
		require(IERC20(usdtAddress).balanceOf(msg.sender) >= _amount, 'balance is not enaugh');
        
        User memory _user = _financialtorage.userInfo[msg.sender];
        if(_financialtorage.isFinancial[msg.sender]){
            _user.total_financial += _amount;
        }else{
            _financialtorage.isFinancial[msg.sender] = true;
            _user.account = msg.sender;
            _user.total_financial = _amount;
            _financialtorage.keys.push(msg.sender);
        }
        _user.latest_financial = _amount;
        _user.financial_num++;
         _financialtorage.userInfo[msg.sender] = _user;

        IERC20(usdtAddress).transferFrom(msg.sender, address(this), _amount);

        total_financial += _amount;
        total_num += 1;

        emit FinancialEvent(msg.sender, _amount, _type);
    }

    //batch redemption
    function batchRedemption (address[] memory _address, uint256[] memory _amount, uint256 _totalAmount) external onlyOwner {
		uint256 aSize = _address.length;

        uint256 mSize = _amount.length;
        require(aSize == mSize, 'The redemption length is incorrect');

        uint256 availableBalance = IERC20(usdtAddress).balanceOf(address(this));

        require(availableBalance >= _totalAmount, 'The available balance is less than the total redeemable amount');
        for (uint256 j = 0; j < aSize; j++) {
            address _address_ = _address[j];
            User memory _user = _financialtorage.userInfo[_address_];
            _user.total_redemptions += _amount[j];
            _user.latest_redemptions = _amount[j];
            _user.redemptions_num++;
            _financialtorage.userInfo[_address_] = _user;
            IERC20(usdtAddress).transfer(_address[j], _amount[j]);
        }
        emit BatchRedemptionEvent(_address, _amount);
    }

    //redemption
    function redemption (address _address, uint256 _amount) public onlyOwner {

        uint256 availableBalance = IERC20(usdtAddress).balanceOf(address(this));
        require(availableBalance >= _amount, 'The available balance is less than the total redeemable amount');

        User memory _user = _financialtorage.userInfo[_address];
        _user.total_redemptions += _amount;
        _user.latest_redemptions = _amount;
        _user.redemptions_num++;
         _financialtorage.userInfo[_address] = _user;
         
        IERC20(usdtAddress).approve(_address, _amount);

        IERC20(usdtAddress).transfer(_address, _amount);
    }

    //total financial
    function totalFinancial() external onlyOwner view returns(uint256) {
        return total_financial;
    }

    //total financial num
    function totalNum() external onlyOwner view returns(uint256) {
        return total_num;
    }

    //total financial num
    function balanceOfFinancial() external onlyOwner view returns(uint256) {
        return IERC20(usdtAddress).balanceOf(address(this));
    }
}