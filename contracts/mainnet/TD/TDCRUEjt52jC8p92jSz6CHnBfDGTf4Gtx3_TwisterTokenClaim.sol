pragma solidity >=0.6.0;

import "Initializable.sol";
import "Ownable.sol";
import "SafeMath.sol";
import "ReentrancyGuard.sol";


interface IERC20 {
    function decimals() external view returns (uint8);
}

contract TwisterTokenClaim is Initializable, OwnableUpgradeSafe, ReentrancyGuardUpgradeSafe {
    using SafeMath for uint256;

    address public TwisterToken;
    uint256 public trxPrice;
    uint256 public fee;
    uint256 public depositFee;
    uint256 public withdrawFee;

    // TODO: check these addresses before deploy
    function initialize(address _twisterToken) public initializer {
        TwisterToken = _twisterToken;
        trxPrice = 150000;
        fee = 20;      // (0.2%, 100 = 1%)
        depositFee = 60000000;
        withdrawFee = 20000000;
        ReentrancyGuardUpgradeSafe.__ReentrancyGuard_init();
        OwnableUpgradeSafe.__Ownable_init();
    }

    // set trxPrice
    function setTrxPrice(uint256 price) public onlyOwner {
        trxPrice = price;
    }

    // set fee
    function setMixerFeePercentage(uint256 _fee) public onlyOwner {
        fee = _fee;
    }

    /// mixer fee percentage
    function mixerFeePercentage(address token, uint256 amount) public view returns (uint256) {
        return fee;  // (in 0.01%, e.g. 100 = 1%)
    }

    /// mixer fee
    function mixerFee(address token, uint256 amount) public view returns (uint256) {
        return amount.mul(mixerFeePercentage(token, amount)) / 10000;
    }

    /// set deposit fee
    function setDepositFee(uint256 _fee) public onlyOwner {
        depositFee = _fee;
    }

    /// set withdraw fee
    function setWithdrawFee(uint256 _fee) public onlyOwner {
        withdrawFee = _fee;
    }

    // calculate claim amount
    // TODO: check these numbers before deploy
    function calcClaimAmount(address token, uint256 amount) public view returns (uint256) {
        if (token == TwisterToken) {
            // twister token gets no claims
            return 0;
        }
        else if (token == address(0x414141414141414141414141414141414141414141)) {
            // claim amount for TRX
            if (amount <= 10000 * 10**6) {
                amount = amount.mul(8) / 10;
            }
            else if (amount <= 100000 * 10**6) {
                amount = amount;
            }
            else if (amount <= 1000000 * 10**6) {
                amount = amount.mul(2);
            }
            else {
                amount = amount.mul(4);
            }

            return amount.mul(trxPrice) / 10**6;
        }
        else {
            IERC20 erc20 = IERC20(token);
            uint256 decimals = erc20.decimals();
            uint256 unit = 10**decimals;

            // claim amount for other ERC20 tokens
            if (amount <= 100 * unit) {
                return amount.mul(6) * 10**6 / (10 * unit);
            }
            else if (amount <= 1000 * unit) {
                return amount.mul(8) * 10**6 / (10 * unit);
            }
            else if (amount <= 10000 * unit) {
                return amount * 10**6 / unit;
            }
            else if (amount <= 100000 * unit) {
                return amount.mul(2) * 10**6 / unit;
            }
            else {
                return amount.mul(4) * 10**6 / unit;
            }
        }
    }
}