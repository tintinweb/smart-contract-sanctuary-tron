contract Token is ERC20("DFL", "DFL", 18) {
    using EnumerableSet for EnumerableSet.AddressSet;


    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);
    event ExcludeFromFees(address indexed account, bool isExcluded);


    address _owner;
    //TODO --  
    uint256 one_day = 60 * 60 * 24;
    address public pairAddress = 0x000000000000000000000000000000000000dEaD;
    address public recAddress = 0x644D2F79e4E2c7734dFCaF7EE3ad9F437948fbE8;
    //TODO


    uint256 one_token = 10 ** uint256(decimals());
    uint256 baseTime = 1627747200;
    uint256 burnFee = 80;
    uint256 ownerFee = 15;
    uint256 rewardFee = 5;
    uint256 totalFees = burnFee.add(ownerFee).add(rewardFee);
    uint256 feePercent = 1000;
    uint256 rewardLimit = 10 * one_token;
    uint256 rewardUserNum = 10;
    uint256 burnLimit = 1000 * one_token;
    mapping(uint256 => mapping(address => uint256))userDayMap;//day=>user=>amount;
    mapping(uint256 => EnumerableSet.AddressSet) dayValidMap;

    // exlcude from fees
    mapping(address => bool) private _isExcludedFromFees;
    mapping(uint256 => bool) checkRewardMap;
    bool private swapping;
    uint256 nonceCall;

    modifier onlyOwner() {
        require(_owner == msg.sender, "Ownable: caller is not the owner");
        _;
    }

    function transferOwnership(address newOwner) public onlyOwner {
        require(
            newOwner != address(0),
            "Ownable: new owner is the zero address"
        );
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }

    constructor() public {
        _mint(msg.sender, 10000 * (10 ** uint256(decimals())));
        _owner = msg.sender;
    }

    function excludeFromFees(address account, bool excluded) public onlyOwner {
        require(_isExcludedFromFees[account] != excluded, "Account is already the value of 'excluded'");
        _isExcludedFromFees[account] = excluded;
        emit ExcludeFromFees(account, excluded);
    }

    function setPairAddress(address _pairAddress) public onlyOwner {
        pairAddress = _pairAddress;
    }

    function getDay() public view returns (uint256){
        return now.sub(baseTime).div(one_day);
    }

    function update() public {
        _checkReward();
    }

    function _checkReward() internal {
        uint256 day = getDay();
        if (checkRewardMap[day]) {
            return;
        }
        EnumerableSet.AddressSet storage enSet = dayValidMap[day - 1];
        uint curLen = enSet.length();
        checkRewardMap[day] = true;
        if (curLen < rewardUserNum) {
            return;
        }
        uint rewardAmount = balanceOf(address(this)).div(rewardUserNum);
        if (rewardAmount == 0) {
            return;
        }
        if (curLen == rewardUserNum) {
            _distribute(enSet, rewardAmount);
        } else if (curLen < rewardUserNum * 2) {
            _fiter1(enSet, curLen.sub(rewardUserNum), rewardAmount);
        } else {
            _fiter2(enSet, rewardAmount);
        }

    }

    function _distribute(EnumerableSet.AddressSet storage enSet, uint amount) internal {
        for (uint i = 0; i < rewardUserNum; i++) {
            super._transfer(address(this), enSet.at(i), amount);
        }
    }

    function _fiter1(EnumerableSet.AddressSet storage enSet, uint n, uint amount) internal {
        for (uint i = 0; i < n; i++) {
            uint reId = _randomNum().mod(enSet.length());
            enSet.remove(enSet.at(reId));
        }
        _distribute(enSet, amount);
    }

    function _fiter2(EnumerableSet.AddressSet storage enSet, uint amount) internal {
        for (uint i = 0; i < rewardUserNum; i++) {
            uint reId = _randomNum().mod(enSet.length());
            address addr = enSet.at(reId);
            enSet.remove(addr);
            super._transfer(address(this), addr, amount);
        }

    }


    function _transfer(address sender, address recipient, uint256 amount) internal override {
        _checkReward();

        if (sender == pairAddress) {
            uint day = getDay();
            uint temp = userDayMap[day][recipient];
            temp = temp.add(amount);
            if (temp >= rewardLimit) {
                dayValidMap[day].add(recipient);
            } else {
                userDayMap[day][recipient] = temp;
            }
        }


        bool takeFee = !swapping;

        // if any account belongs to _isExcludedFromFee account then remove the fee
        if (_isExcludedFromFees[sender] || _isExcludedFromFees[recipient]) {
            takeFee = false;
        }
        if (totalSupply() <= burnLimit) {
            takeFee = false;
        }
        if (takeFee) {
            uint256 fees = amount.mul(totalFees).div(feePercent);
            uint256 burnAmount = fees.mul(burnFee).div(totalFees);
            uint256 ownerAmount = fees.mul(ownerFee).div(totalFees);
            
            _burn(sender, burnAmount);
            super._transfer(sender, recAddress, ownerAmount);

            super._transfer(sender, address(this), fees.sub(burnAmount).sub(ownerAmount));
            amount = amount.sub(fees);
        }
        super._transfer(sender, recipient, amount);
    }

    function _randomNum() internal returns (uint256){
        nonceCall = nonceCall.add(1);
        return uint(keccak256(abi.encodePacked(now, msg.sender, uint160(msg.sender) - 56, nonceCall)));
    }
}