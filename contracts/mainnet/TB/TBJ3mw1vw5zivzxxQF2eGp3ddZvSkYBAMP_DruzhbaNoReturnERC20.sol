contract DruzhbaNoReturnERC20 is DruzhbaStateMachine {
    using Address for address;

    string public constant VERSION = "2.0-no-return";

    constructor(uint256 chainId, address admin, address signer) DruzhbaStateMachine(chainId, admin, signer) {}

    function _transfer(address token, address _to, uint256 _value) internal override {
        bytes memory data = abi.encodeWithSelector(IERC20(token).transfer.selector, _to, _value);
        address(token).functionCall(data, "ERC20: transfer low-level call failed");
    }

    function _transferFrom(address token, address _from, address _to, uint256 _value) internal override {
        bytes memory data = abi.encodeWithSelector(IERC20(token).transferFrom.selector, _from, _to, _value);
        address(token).functionCall(data, "ERC20: transferFrom low-level call failed");
    }
}


