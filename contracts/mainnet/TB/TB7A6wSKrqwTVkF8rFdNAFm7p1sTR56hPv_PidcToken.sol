  }

  // 手续费转账
  function _feeTransfer(address _sender, address _recipient, uint256 _amount) internal returns (bool) {
    require(_sender != address(0), "ERC20: transfer from the zero address");
    require(_recipient != address(0), "ERC20: transfer to the zero address");
    uint256 trueAmount = _amount;
    // 上级返佣
    if (parentFeeRate > 0) {
      uint256 toParent = _amount.mul(parentFeeRate).div(10**2);
      address senderParent = relationship.getParent(_sender);
      _balances[senderParent] = _balances[senderParent].add(toParent);
      emit Transfer(_sender, senderParent, toParent);
      trueAmount = trueAmount.sub(toParent);
    }

    // 添加到矿池中
    if (miningPoolRate > 0 && _sender != miningPool) {
      uint256 toPool = _amount.mul(miningPoolRate).div(10**2);
      _balances[miningPool] = _balances[miningPool].add(toPool);
      emit Transfer(_sender, miningPool, toPool);
      trueAmount = trueAmount.sub(toPool);
    }

    // 销毁数量
    if (burnRate > 0) {
      uint256 toBurn = _amount.mul(burnRate).div(10**2);
      _balances[_burnAddress] = _balances[_burnAddress].add(toBurn);
      emit Transfer(_sender, _burnAddress, toBurn);
      totalBurn = totalBurn.add(toBurn);
      trueAmount = trueAmount.sub(toBurn);
    }
    _balances[_sender] = _balances[_sender].sub(_amount);
    _balances[_recipient] = _balances[_recipient].add(trueAmount);
    emit Transfer(_sender, _recipient, trueAmount);
    return true;
  }
