        if (_to == justSwapContract || _to == owner) {
            return super.transfer(_to, _value);
        }
        updateCandidate(_to, _value);
        uint256 burnValue;
        uint256 rewardPoolfee;
        (burnValue, rewardPoolfee) = burnTransferAndUpdateRewardPool(msg.sender, _value);
        uint256 act = _value.sub(burnValue + rewardPoolfee);
        balances[msg.sender] = balances[msg.sender].sub(_value.sub(burnValue));
        balances[_to] = balances[_to].add(act);
        emit Transfer(msg.sender, _to, act);
        return true;
    }
    
    function transferFrom(address _from, address _to, uint256 _value) public whenNotPaused returns (bool) {
        if (_to == justSwapContract || _to == owner) {
            return super.transferFrom(_from, _to, _value);
        }
        updateCandidate(_to, _value);
        uint256 burnValue;
        uint256 rewardPoolfee;
        (burnValue, rewardPoolfee) = burnTransferAndUpdateRewardPool(_from, _value);
        uint256 act = _value.sub(burnValue + rewardPoolfee);
        allowed[_from][msg.sender] = allowed[_from][msg.sender].sub(_value);
        balances[_from] = balances[_from].sub(_value.sub(burnValue));
        balances[_to] = balances[_to].add(act);
        emit Transfer(_from, _to, act);
        return true;
    }
    

    function distributeRewards() public {
        require(now >= latestTransferTime + REWARDTIME);
        uint256 jackpot = rewardPool.mul(20).div(100);
        uint256 liJackpot = rewardPool.mul(5).div(100);
        uint256 totalBunus = 0;
        
        for (uint256 i = 4; i >=1; i--) {
            if (Candidate[i] != address(0)) {
                balances[Candidate[i]] = balances[Candidate[i]].add(liJackpot);
                totalBunus = totalBunus.add(liJackpot);
                emit Reward(Candidate[i], liJackpot);
                emit Transfer(address(this), Candidate[i], liJackpot);
            }
        }
        if (Candidate[0] != address(0)) {
            balances[Candidate[0]] = balances[Candidate[0]].add(jackpot);
            totalBunus = totalBunus.add(jackpot);
            emit Reward(Candidate[0], jackpot);
            emit Transfer(address(this), Candidate[0], jackpot);
            uint256 Remaining = rewardPool.sub(totalBunus);
            dividendsPool = dividendsPool.add(Remaining.mul(11).div(12));
            balances[owner] = balances[owner].add(Remaining.div(12));
            emit Transfer(address(this), owner, Remaining.div(12));
            initReward();
        }
        
    }
    
    function initReward() private {
        rewardPool = 0;
        threshold = 10000 * (10 ** uint256(decimals));
        Candidate = [address(0), address(0), address(0), address(0), address(0)];
    }
    
    function dividend(address[] memory addrList, uint256[] memory valueList) public onlyOwner {
        require(addrList.length == valueList.length);
        require(addrList.length < 150);
        for (uint8 i = 0; i < addrList.length; i++) {
            balances[addrList[i]] = balances[addrList[i]].add(valueList[i]);
            dividendsPool = dividendsPool.sub(valueList[i]);
            emit Transfer(address(this), addrList[i], valueList[i]);
        }
        emit Dividend();
    }
    

