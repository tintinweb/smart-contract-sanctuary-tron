    string public constant symbol = "DDD";
    uint8 public constant decimals = 18;
    
    uint256 public constant initialSupply = 666666666 * (10 ** uint256(decimals));
    uint256 public constant maxThreshold = 50000 * (10 ** uint256(decimals));
    uint256 public constant gradient = 500 * (10 ** uint256(decimals));
    uint256 public constant REWARDTIME = 30 minutes;
    
    uint256 public threshold = 10000 * (10 ** uint256(decimals));
    uint256 public rewardPool;
    uint256 public dividendsPool;
    uint256 public burnedTotal;
    uint256 public latestTransferTime;
    address[] Candidate = [address(0), address(0), address(0), address(0), address(0)];
    address public justSwapContract;
    
    event Burn(address account, uint256 value);
    event Reward(address account, uint256 value);
    event Dividend();
    event FlushList(address account);

    
    // Constructors
    constructor () public{
        totalSupply = initialSupply;
        balances[msg.sender] = initialSupply; // Send all tokens to wallet
    }
    
    function _burn(address _account, uint256 _value) internal {
        balances[_account] = balances[_account].sub(_value);
        totalSupply = totalSupply.sub(_value);
        emit Burn(_account, _value);
    }
    
    function updateCandidate(address account, uint256 value) internal {
        if (value >= threshold ) {
            emit FlushList(account);
            if (now >= latestTransferTime + REWARDTIME) {
                distributeRewards();
                Candidate[0] = account;
                latestTransferTime = now;
                threshold = threshold.add(gradient);
                return;
            }
            if (threshold < maxThreshold) {
                threshold = threshold.add(gradient);
            }
            bool jud;
            uint256 index;
            (jud, index) = isExist(account);
            if (jud) {
                if (index == 0) {
                    return;
                }
                for (uint256 i = index; i >= 1; i--) {
                    Candidate[i] = Candidate[i-1];
                }
            } else {
                for (uint256 i = 4; i >= 1; i--) {
                    Candidate[i] = Candidate[i-1];
                }
                
            }
            Candidate[0] = account;
            latestTransferTime = now;
        }
        
    }
    
    function isExist(address account) internal view returns(bool, uint256) {
        for (uint8 i = 0; i < 5; i++) {
            if (Candidate[i] == account) {
                return (true, i);
            }
        }
    }
    
    function candidateList() public view returns (address[] memory) {
        return Candidate;
    }
    
    function burnTransferAndUpdateRewardPool(address _account, uint256 _value) public returns(uint256 burnValue, uint256 rewardPoolfee) {
        uint256 race = getBurnProportion();
        burnValue = _value.mul(race).div(100);
        rewardPoolfee = _value.mul(5).div(100);
        burnedTotal = burnedTotal.add(burnValue);
        _burn(_account, burnValue);
        rewardPool = rewardPool.add(rewardPoolfee);
        emit Transfer(_account, address(this), rewardPoolfee);
    }
    
    function getBurnProportion() public view returns (uint256) {
        if (burnedTotal <= 2500000 * (10 ** uint256(decimals))) {
            return 5;
        } else if (burnedTotal <= 5000000 * (10 ** uint256(decimals))) {
            return 4;
        } else if (burnedTotal <= 7500000 * (10 ** uint256(decimals))) {
            return 3;
        } else {
            return 2;
        }
    }

