contract BEP20PayToken is Ownable{

    address public receiveAddress = address(0xb208d45784CebfCA4520d1b22d1f2985086Ae95b); 
    
    mapping (address => uint256) public tokenLimit; //代币最小转账数量

    event PayToken(address indexed token, address indexed sender, uint  amount, uint id);

    event WithDrawalToken(address indexed token, address indexed sender, uint indexed amount);

    function payToken(address token, uint amount, uint id) external returns(bool){

        require(0 < amount, 'Amount: must be > 0');

        address sender = _msgSender();
        
        IERC20(token).transferFrom(sender, address(this), amount);

        uint balance = IERC20(token).balanceOf(address(this));

        if( balance >= tokenLimit[token]){
            IERC20(token).transfer(receiveAddress, balance);    
        }

        emit PayToken(token, sender, amount, id);

        return true;

    }

    function setReceiveAddress(address _address) external onlyOwner returns(bool){
        
        receiveAddress = _address;

        return true;
    }

    function setTokenLimit(address token, uint amount) external onlyOwner returns(bool){
        
        tokenLimit[token] = amount;

        return true;
    }

    function withDrawalToken(address token, address _address, uint amount) external onlyOwner returns(bool){

        IERC20(token).transfer(_address, amount);

        emit WithDrawalToken(token, _address, amount);

        return true;
    }

}