pragma solidity ^0.8.0;

contract BlockList {
    mapping(address => bool) public blockedAddress;

    event BlockAddressEvent(address indexed _address);
    event UnblockAddressEvent(address indexed _address);

    function _blockAddress(address _address) internal virtual {
        blockedAddress[_address] = true;
        emit BlockAddressEvent(_address);
    }

    function _unblockAddress(address _address) internal virtual {
        blockedAddress[_address] = false;
        emit UnblockAddressEvent(_address);
    }

    function isBlocked(address _address) external view returns (bool) {
        return _isBlocked(_address);
    }

    function _isBlocked(address _address) internal view returns (bool) {
        return blockedAddress[_address];
    }
}


