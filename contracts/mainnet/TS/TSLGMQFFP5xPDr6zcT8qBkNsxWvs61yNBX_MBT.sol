abstract contract AbstractToken is Copyright, IMintableERC20, ERC20Snapshot, Pausable, BlockList, AccessControlEnumerable {
    uint8 internal constant DECIMALS = 6;
    // solhint-disable-next-line var-name-mixedcase
    bytes32 public immutable PAUSER_ROLE;
    // solhint-disable-next-line var-name-mixedcase
    bytes32 public immutable MINTER_ROLE;
    // solhint-disable-next-line var-name-mixedcase
    bytes32 public immutable BURNER_ROLE;
    // solhint-disable-next-line var-name-mixedcase
    bytes32 public immutable BLOCKER_ROLE;
    // solhint-disable-next-line var-name-mixedcase
    bytes32 public immutable UNBLOCKER_ROLE;
    // solhint-disable-next-line var-name-mixedcase
    bytes32 public immutable SNAPSHOT_ROLE;

    constructor() ERC20(projectName(), projectSymbol()) {
        // init default admin role
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        // calculate role IDs
        string memory s = projectSymbol();
        bytes32 _pauserRole = keccak256(abi.encodePacked(s, "_PAUSER_ROLE"));
        bytes32 _minterRole = keccak256(abi.encodePacked(s, "_MINTER_ROLE"));
        bytes32 _burnerRole = keccak256(abi.encodePacked(s, "_BURNER_ROLE"));
        bytes32 _blockerRole = keccak256(abi.encodePacked(s, "_BLOCKER_ROLE"));
        bytes32 _unblockerRole = keccak256(abi.encodePacked(s, "_UNBLOCKER_ROLE"));
        bytes32 _snapshotRole = keccak256(abi.encodePacked(s, "_SNAPSHOT_ROLE"));

        // assign immutable variables
        PAUSER_ROLE = _pauserRole;
        MINTER_ROLE = _minterRole;
        BURNER_ROLE = _burnerRole;
        BLOCKER_ROLE = _blockerRole;
        UNBLOCKER_ROLE = _unblockerRole;
        SNAPSHOT_ROLE = _snapshotRole;

        // setup security roles
        _setupRole(_pauserRole, msg.sender);
        _setupRole(_minterRole, msg.sender);
        _setupRole(_burnerRole, msg.sender);
        _setupRole(_blockerRole, msg.sender);
        _setupRole(_unblockerRole, msg.sender);
        _setupRole(_snapshotRole, msg.sender);
    }

    function decimals() public view virtual override returns (uint8) {
        return DECIMALS;
    }

    function pause() external onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    function mint(uint256 amount) external virtual override onlyRole(MINTER_ROLE) {
        _mint(msg.sender, amount);
    }

    function mintFor(address recipient, uint256 amount) external virtual override onlyRole(MINTER_ROLE) {
        _mint(recipient, amount);
    }

    function _beforeTokenTransfer(address from, address to, uint256 amount)
    internal
    whenNotPaused
    override
    {
        require(!_isBlocked(from), "BlockList: Sender blocked");
        require(!_isBlocked(to), "BlockList: Recipient blocked");
        super._beforeTokenTransfer(from, to, amount);
    }

    function burn(uint256 amount) external onlyRole(BURNER_ROLE) {
        address _sender = _msgSender();
        super._burn(_sender, amount);
    }

    function burnFrom(address account, uint256 amount) external onlyRole(BURNER_ROLE) {
        address _sender = _msgSender();
        uint256 allowance = allowance(account, _sender);
        // solhint-disable-next-line reason-string
        require(allowance >= amount, "ERC20: burn amount exceeds allowance");
        unchecked {
            uint256 decreasedAllowance = allowance - amount;

            _approve(account, _sender, decreasedAllowance);
        }
        _burn(account, amount);
    }

    function blockAddress(address _address) external onlyRole(BLOCKER_ROLE) {
        super._blockAddress(_address);
    }

    function unblockAddress(address _address) external onlyRole(UNBLOCKER_ROLE) {
        super._unblockAddress(_address);
    }

    function snapshot() external onlyRole(SNAPSHOT_ROLE) returns (uint256) {
        return super._snapshot();
    }
}


