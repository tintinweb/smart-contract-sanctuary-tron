contract DepositRoute {
    ICoinDeposit public coinDeposit;
    IUnifiedApprove public unifiedApprove;
    IWETH public weth;

    constructor(ICoinDeposit _coinDeposit,IUnifiedApprove _unifiedApprove,IWETH _weth) {
        coinDeposit=_coinDeposit;
        unifiedApprove=_unifiedApprove;
        weth=_weth;
    }

    function deposit(uint to) external payable {
        uint amount=msg.value;
        weth.deposit{value: amount}();
        weth.transfer(address(coinDeposit),amount);
        coinDeposit.deposit(weth,to);
    }

    function deposit(IERC20 coin,uint to,uint amount) external {
        unifiedApprove.transferCoin(coin,msg.sender,address(coinDeposit),amount);
        coinDeposit.deposit(coin,to);
    }

    function withdraw(uint deadline,uint oid,IERC20 coin,uint256 amount,address to,bytes memory signature) public {
        if(address(coin)==address(weth)) {
            coinDeposit.withdraw(deadline,oid,coin,amount,address(this),signature);
            weth.withdraw(amount);
            payable(to).transfer(amount);
        }else {
            coinDeposit.withdraw(deadline,oid,coin,amount,to,signature);
        }
    }

    receive() external payable {
    }
}