    uint256 public BONUS_MULTIPLIER = 1;
 
    mapping (uint256 => mapping (address => UserInfo)) public userInfo;
    mapping (address => mapping (address => uint256)) public pairdetails;
   
    struct UserInfo {
        uint256 amount;     // How many LP tokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        //
        // We do some fancy math here. Basically, any point in time, the amount of PHCFinances
        // entitled to a user but is pending to be distributed is:
        //
        //   pending reward = (user.amount * pool.accPHCFinancePerShare) - user.rewardDebt
        //
        // Whenever a user deposits or withdraws LP tokens to a pool. Here's what happens:
        //   1. The pool's `accPHCFinancePerShare` (and `lastRewardBlock`) gets updated.
        //   2. User receives the pending reward sent to his/her address.
        //   3. User's `amount` gets updated.
        //   4. User's `rewardDebt` gets updated.
    }

    struct PoolInfo {
        IERC20 depositToken;
        IERC20 rewardToken;           // Address of LP token contract.
        uint256 allocPoint;       // How many allocation points assigned to this pool. PHCFinances to distribute per block.
        uint256 lastRewardBlock;  // Last block number that PHCFinances distribution occurs.
        uint256 accTokenPerShare; // Accumulated PHCFinances per share, times 1e12. See below.
        uint256 totalStakeAmount;
        uint256 totalSaleAmountIn;
        uint256 totalSaleAmountOut;
       
    }

   

    event Deposit(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event Emergency(address indexed tokenAddres, address receiver, uint256 tokenAmount);
    event UpdateRewardamount(address indexed tokenAddres, uint256 indexed pid, uint256 Amount);

    constructor(uint256 _rewardPerBlock) public {
        _safeTransfers = new SafeTransfer(address(this)); 
        owneraddress = msg.sender;
        rewardPerBlock = _rewardPerBlock;
    }
    
    function addPair(IERC20 _depositToken,IERC20[] calldata _rewardToken,uint[] calldata _allocPoint,uint256[] calldata _totalSaleAmountIn)external onlyOwner{
        require((_rewardToken.length == _allocPoint.length) && (_rewardToken.length == _totalSaleAmountIn.length),"Invalid params");
       
        for(uint i = 0 ; i < _rewardToken.length ; i++){
            poolInfo.push(PoolInfo({
            depositToken: _depositToken,
            rewardToken: _rewardToken[i],
            allocPoint: _allocPoint[i],
            lastRewardBlock: block.number,
            accTokenPerShare: 0, 
            totalStakeAmount: 0,
            totalSaleAmountIn:_totalSaleAmountIn[i],
            totalSaleAmountOut:0
           
        }));
            totalAllocPoint += _allocPoint[i];
            pairdetails[address(_depositToken)][address(_rewardToken[i])] = poolInfo.length - 1;
            _rewardToken[i].safeTransferFrom(owneraddress,address(_safeTransfers),_totalSaleAmountIn[i]);
        }
    }

    function balances(address Token)public view returns(uint256){
             return IERC20(Token).balanceOf(address(_safeTransfers));
    }

    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        uint256 lpSupply = pool.totalStakeAmount;
        if (lpSupply == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }
        uint256 multiplier = getMultiplier(pool.lastRewardBlock, block.number);
        uint256 Rewardamount = multiplier.mul(rewardPerBlock).mul(pool.allocPoint).div(totalAllocPoint);
        pool.accTokenPerShare = pool.accTokenPerShare.add(Rewardamount.mul(1e12).div(lpSupply));
        pool.lastRewardBlock = block.number;
    }
    
    function stake(uint _id,uint256 _depositamount)external nonReentrant{
        require(_id <= poolInfo.length,"Invalid id");
        require(_depositamount != 0 , "Invalid amount");
        require(msg.sender != owneraddress, "Invalid user");
     
        PoolInfo storage pool = poolInfo[_id];
        UserInfo storage user = userInfo[_id][msg.sender];

        updatePool(_id);

        if (user.amount > 0) {
            
             uint256 pending = user.amount.mul(pool.accTokenPerShare).div(1e12).sub(user.rewardDebt);
             pool.totalSaleAmountOut = pool.totalSaleAmountOut.add(pending);
             if (pending > 0) {
                  require(pool.totalSaleAmountOut <= pool.totalSaleAmountIn, "Reserved amount exceed");
                  _safeTransfers.safeRewardsTransfer(address(pool.rewardToken),address(msg.sender), pending);
        
                }
             }
            
       if (_depositamount > 0) {
           
            user.amount = user.amount.add(_depositamount);
          
            (pool.depositToken).safeTransferFrom(msg.sender, address(this), _depositamount);

            } 

        user.rewardDebt = user.amount.mul(pool.accTokenPerShare).div(1e12);
        pool.totalStakeAmount += _depositamount;
        emit Deposit(msg.sender, _depositamount); 
    }

    
    function withdraw(uint256 _pid, uint256 _amount) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount >= _amount, "withdraw: not good");
        updatePool(_pid);
        uint256 pending = user.amount.mul(pool.accTokenPerShare).div(1e12).sub(user.rewardDebt);
        pool.totalSaleAmountOut = pool.totalSaleAmountOut.add(pending);
        if(pending > 0) {
             require(pool.totalSaleAmountOut <= pool.totalSaleAmountIn, "Reserved amount exceed");
             _safeTransfers.safeRewardsTransfer(address(pool.rewardToken),msg.sender, pending);
        }
        if(_amount > 0) {
            user.amount = user.amount.sub(_amount);
            (pool.depositToken).safeTransfer(address(msg.sender), _amount);
             pool.totalStakeAmount -= _amount;
        }
        user.rewardDebt = user.amount.mul(pool.accTokenPerShare).div(1e12);
        emit Withdraw(msg.sender, _pid, _amount);
    }

    function emergencyWithdraw(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        (pool.depositToken).safeTransfer(address(msg.sender), user.amount);
        pool.totalStakeAmount -= user.amount ;
        emit EmergencyWithdraw(msg.sender, _pid, user.amount);
        user.amount = 0;
        user.rewardDebt = 0;
       
    }

  // Return reward multiplier over the given _from to _to block.
    function getMultiplier(uint256 _from, uint256 _to) public view returns (uint256) {
        return _to.sub(_from).mul(BONUS_MULTIPLIER);
    }

   function updateMultiplier(uint256 multiplierNumber) public onlyOwner {
        BONUS_MULTIPLIER = multiplierNumber;
    } 

    function updaterewardPerBlock(uint256 _rewardPerBlock) public onlyOwner {
        rewardPerBlock = _rewardPerBlock;
    } 

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }


    function emergency(address _tokenAddress, address _to, uint256 _tokenAmount) external onlyOwner {
        if(_tokenAddress == address(0x0)){
            return;
        } else {
             _safeTransfers.safeRewardsTransfer(_tokenAddress,_to, _tokenAmount);
        }
        
        emit Emergency(_tokenAddress, _to, _tokenAmount);
    }

    function updateRewardamount(uint256 _id,uint256 _amount) public onlyOwner {
        require(_amount != 0, "Invalid amount");
        PoolInfo storage pool = poolInfo[_id];
         uint256 remain;
        if(pool.totalSaleAmountIn >= pool.totalSaleAmountOut ){
            remain = pool.totalSaleAmountIn - pool.totalSaleAmountOut;

        }
        else{
            remain = pool.totalSaleAmountOut - pool.totalSaleAmountIn;
        }
        pool.totalSaleAmountIn = 0;
        pool.totalSaleAmountOut = 0;
        pool.totalSaleAmountIn = _amount + remain;
        pool.rewardToken.safeTransferFrom(owneraddress,address(_safeTransfers),_amount);
        emit UpdateRewardamount(address(pool.rewardToken),_id, _amount);

    } 
    
  function pendingReward(address _user,uint256 _pid) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 stakedTokenSupply = pool.totalStakeAmount;
        if (block.number >  pool.lastRewardBlock && stakedTokenSupply != 0) {
            uint256 multiplier = getMultiplier( pool.lastRewardBlock, block.number);
            uint256 Reward =  multiplier.mul(rewardPerBlock).mul(pool.allocPoint).div(totalAllocPoint);
            uint256 adjustedTokenPerShare =
                pool.accTokenPerShare.add(Reward.mul(1e12).div(stakedTokenSupply));
            return user.amount.mul(adjustedTokenPerShare).div(1e12).sub(user.rewardDebt);
        } else {
            return  user.amount.mul(pool.accTokenPerShare).div(1e12).sub(user.rewardDebt);
        }
    }

}