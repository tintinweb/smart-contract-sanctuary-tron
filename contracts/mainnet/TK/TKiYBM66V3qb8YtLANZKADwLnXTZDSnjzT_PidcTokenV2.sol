  function burnFrom(address account, uint256 amount) public returns (bool) {
    require(canBurn, "token can not burn");
    _burnFrom(account, amount);
    return true;
  }

  function transferFrom(
    address sender,
    address recipient,
    uint256 amount
  ) public override returns (bool) {
    require(paused == false, "transfer paused");
    if (
      isFromWhiteList(msg.sender) ||
      isFromWhiteList(sender) ||
      isToWhiteList(recipient) ||
      feeStatus == false
    ) {
      return super.transferFrom(sender, recipient, amount); //set whiteList for addLiquidtion
    }
    _approve(sender, msg.sender, _allowances[sender][msg.sender].sub(amount));
    return _feeTransfer(sender, recipient, amount);
  }

  function transfer(address recipient, uint256 amount)
    public
    override
    returns (bool)
  {
    require(paused == false, "transfer paused");
    if (
      isFromWhiteList(msg.sender) ||
      isToWhiteList(recipient) ||
      feeStatus == false
    ) {
      return super.transfer(recipient, amount); //set whiteList for addLiquidtion
    }
    return _feeTransfer(msg.sender, recipient, amount);
  }

  function _feeTransfer(
    address _sender,
    address _recipient,
    uint256 _amount
  ) internal returns (bool) {
    require(_sender != address(0), "ERC20: transfer from the zero address");
    require(_recipient != address(0), "ERC20: transfer to the zero address");
    uint256 trueAmount = _amount;
    if (parentFeeRate > 0) {
      uint256 toParent = _amount.mul(parentFeeRate).div(10**3);
      address senderParent = relationship.getParent(_sender);
      _balances[senderParent] = _balances[senderParent].add(toParent);
      emit Transfer(_sender, senderParent, toParent);
      trueAmount = trueAmount.sub(toParent);
    }

    if (miningPoolRate > 0 && _sender != miningPool) {
      uint256 toPool = _amount.mul(miningPoolRate).div(10**3);
      _balances[miningPool] = _balances[miningPool].add(toPool);
      emit Transfer(_sender, miningPool, toPool);
      trueAmount = trueAmount.sub(toPool);
    }

    if (burnRate > 0) {
      uint256 toBurn = _amount.mul(burnRate).div(10**3);
      if (_burnAddress == address(0)) {
        _totalSupply = _totalSupply.sub(toBurn);
      } else {
        _balances[_burnAddress] = _balances[_burnAddress].add(toBurn);
      }
      emit Transfer(_sender, _burnAddress, toBurn);
      trueAmount = trueAmount.sub(toBurn);
    }
    _balances[_sender] = _balances[_sender].sub(_amount);
    _balances[_recipient] = _balances[_recipient].add(trueAmount);
    emit Transfer(_sender, _recipient, trueAmount);
    return true;
  }

  function upgradeV2() public returns (bool) {
    uint256 balanceOf = v1Token.balanceOf(msg.sender);
    if (balanceOf > 0) {
      _transfer(address(this), msg.sender, balanceOf);
      v1Token.safeTransferFrom(msg.sender, address(v1Token), balanceOf);
    }
    return true;
  }
