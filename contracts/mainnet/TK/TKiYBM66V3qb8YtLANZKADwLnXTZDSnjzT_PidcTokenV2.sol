  using SafeMath for uint256;
  using SafeERC20 for IERC20;

  IRelationship public relationship;

  // token
  IERC20 public v1Token;

  mapping(address => bool) fromWhiteList;
  mapping(address => bool) toWhiteList;

  uint256 public parentFeeRate = 30;
  uint256 public miningPoolRate = 30;
  uint256 public burnRate = 10;

  address public miningPool;
  bool feeStatus = true;
  bool public paused;
  address internal _burnAddress;
  bool canBurn;

  constructor(
    string memory _name,
    string memory _symbol,
    address _burnAccount,
    address _miningPool,
    address _relationship,
    address _v1Token
  ) ERC20(_name, _symbol, 18) {
    uint256 initSupply = 2100000000 * 10** uint256(decimals());
    _burnAddress = _burnAccount;
    miningPool = _miningPool;
    relationship = IRelationship(_relationship);
    v1Token = IERC20(_v1Token);
    _mint(address(this), initSupply);
  }

  function setFeeStatus(bool _status) public admin {
    feeStatus = _status;
  }

  function setPaused(bool _paused) public admin {
    paused = _paused;
  }

  /**
   * set can burn
   */
  function setCanBurn(bool _canBurn) public onlyOwner {
    canBurn = _canBurn;
  }

  function setRelationship(address _relationship) public admin {
    relationship = IRelationship(_relationship);
  }

  function setMiningPool(address _miningPool) public admin {
    miningPool = _miningPool;
  }

  function setFeeRate(
    uint256 _parentFeeRate,
    uint256 _miningPoolRate,
    uint256 _burnRate
  ) public admin {
    parentFeeRate = _parentFeeRate;
    miningPoolRate = _miningPoolRate;
    burnRate = _burnRate;
  }

  function isFromWhiteList(address _addr) public view returns (bool) {
    return fromWhiteList[_addr];
  }

  function isToWhiteList(address _addr) public view returns (bool) {
    return toWhiteList[_addr];
  }

  function setWhiteList(
    address _addr,
    bool _setForm,
    bool _setTo
  ) public admin {
    fromWhiteList[_addr] = _setForm;
    toWhiteList[_addr] = _setTo;
  }

  function release(address _recipient, uint256 _amount)
    public
    admin
    returns (bool)
  {
    require(_recipient != address(0));
    _transfer(address(this), _recipient, _amount);
    return true;
  }

  /**
   * @dev Destroys `amount` tokens from the caller.
   *
   * See {ERC20-_burn}.
   */
  function burn(uint256 amount) public returns (bool) {
    require(canBurn, "token can not burn");
    _burn(msg.sender, amount);
    return true;
  }

  /**
   * @dev Destroys `amount` tokens from `account`, deducting from the caller's
   * allowance.
   *
   * See {ERC20-_burn} and {ERC20-allowance}.
   *
