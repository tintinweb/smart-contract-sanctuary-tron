pragma solidity ^0.5.0;

import "./Ownable.sol";
import "./TRC20.sol";
import "./TRC20Detailed.sol";

contract MCTToken is Ownable, TRC20, TRC20Detailed {

	uint256 private _released;
    uint256 private _startTime;
    uint256 private _quarterAmount;
    uint256 private _maxQuarter = 4;

    constructor (uint256 _totalSupply, string memory _name, string memory _symbol, uint8 _decimals)
    TRC20Detailed(_name, _symbol, _decimals)
    public
    {
        _quarterAmount = 5000000 * 10 ** uint256(_decimals);
        _startTime = block.timestamp;
        _mint(msg.sender, _totalSupply * 10 ** uint256(_decimals) - _quarterAmount * _maxQuarter);
        _mint(address(this), _quarterAmount * _maxQuarter);
    }

    function unlocked() public view returns (uint256) {
        uint256 quarter = (block.timestamp - _startTime) / 90 days;
        if (quarter > _maxQuarter) quarter = _maxQuarter;
        return (quarter * _quarterAmount);
    }

    function quarterRelease()
    public
    onlyOwner
    {
        require(unlocked() > _released, 'ERROR');
        uint256 _releaseAmount = unlocked() - _released;
        _released = _released + _releaseAmount;
        _transfer(address(this), msg.sender, _releaseAmount);
    }

    function released() public view returns (uint256) {
		return _released;
	}

    function ()
    external
    payable
    {
        revert();   //Do NOT accept TRX.
    }
}

