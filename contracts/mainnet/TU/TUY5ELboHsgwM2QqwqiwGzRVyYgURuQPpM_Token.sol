        //锁仓开始时间
        uint256 startTime;
        //锁仓总量
        uint256 totalLockNumber;
        //首次解锁数量
        uint256 initUnlockNumber;
        //当前锁定数量
        uint256 currentLockNumber;
        //已解锁数量
        uint256 unlockedNumber;
        //已使用数量
        uint256 usedNumber;
        //每个周期的解锁数量
        uint256 numberOfUnlocksPerCycle;
        //当前地址是否已使用
        bool used;
    }

    //锁仓地址的映射表
    mapping(address => Locker) public lockers;

    //账户当前解锁的数量 = 首次解锁 + 分批解锁数量
