            uint256 currentUnlockNumber = locker.initUnlockNumber.add(unlockNumber);
            locker.unlockedNumber = currentUnlockNumber;
            //更新当前锁定数量
            locker.currentLockNumber = locker.totalLockNumber.sub(currentUnlockNumber);
        }
    }

