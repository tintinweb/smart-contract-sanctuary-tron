contract DOO is IERC20, Ownable {
    using SafeMath for uint256;

    mapping(address => uint256) private _balances;

    mapping(address => mapping(address => uint256)) private _allowances;

    uint256 private _totalSupply;

    string private _name;
    string private _symbol;
    uint8 private _decimals;

    address private _deadAddress =
        address(0x0000000000000000000000000000000000000000);

    address public uniswapV2Pair;

    mapping(address => bool) public isExcluded;

    mapping(address => address) public inviter;

    // 一亿枚币
    uint256 private _yi;

    // 合约创建时间
    uint256 public createTime;
    // 已经领取的币数量
    uint256 public coinReleased;

    constructor(
        address owner,
        address techAddress,
        address toDeadAddress
    ) {
        _name = "DOO";
        _symbol = "DOO";
        _decimals = 6;
        _owner = owner;

        isExcluded[owner] = true;
        isExcluded[_deadAddress] = true;
        isExcluded[techAddress] = true;
        isExcluded[toDeadAddress] = true;

        _yi = 10**8 * 10**_decimals;

        createTime = block.timestamp;

        // 另有10亿枚技术团队预留，转到指定技术团队钱包账号TDuzMMNPBxv3XR1tcRqTktgM8TBT3RBuWF
        _mint(techAddress, 10 * _yi);

        // 其中500亿在发行出来就转到个人钱包TNpytUNFTyJ2YLE35vhn9xy4CRNfiRgBVm，以后手动转到黑洞销毁地址(链上要能查看到已被销毁)。
        _mint(toDeadAddress, 500 * _yi);
    }

    /**
     * @dev Returns the name of the token.
     */
    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint8) {
        return _decimals;
    }

    /**
     * @dev See {IERC20-totalSupply}.
     */
    function totalSupply() public view override returns (uint256) {
        return _totalSupply;
    }

    /**
     * @dev See {IERC20-balanceOf}.
     */
    function balanceOf(address account) public view override returns (uint256) {
        return _balances[account];
    }

    function transfer(address recipient, uint256 amount)
        public
        override
        returns (bool)
    {
        _transfer(msg.sender, recipient, amount);
        return true;
    }

    /**
     * @dev See {IERC20-allowance}.
     */
    function allowance(address owner, address spender)
        public
        view
        override
        returns (uint256)
    {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount)
        public
        override
        returns (bool)
    {
        _approve(msg.sender, spender, amount);
        return true;
    }

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(
            sender,
            msg.sender,
            _allowances[sender][msg.sender].sub(
                amount,
                "ERC20: transfer amount exceeds allowance"
            )
        );
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue)
        public
        returns (bool)
    {
        _approve(
            msg.sender,
            spender,
            _allowances[msg.sender][spender].add(addedValue)
        );
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue)
        public
        returns (bool)
    {
        _approve(
            msg.sender,
            spender,
            _allowances[msg.sender][spender].sub(
                subtractedValue,
                "ERC20: decreased allowance below zero"
            )
        );
        return true;
    }

    function setIsExcludedFromFee(address from, bool v) public onlyOwner {
        isExcluded[from] = v;
    }

    function changeSwapAddress(address _addr) public onlyOwner {
        uniswapV2Pair = _addr;
    }

    // 490亿枚在链上处于冻结状态，从2021.9.23号晚上23点开始按180天平均释放出63亿枚(即平均每天释放3500万枚/天)
    // 180天之后的180天里释放剩下币量的10%（也是按天释放，(490-63)亿*10%=42.7亿枚，每天释放23722222枚）
    // 再下一个180天里也是平均按天释放剩下的384.3亿枚的10%，以此类推，永远释放不完。
    function canReleaseCoinNumber() private returns (uint256) {
        // uint256 sinceDays = (block.timestamp - createTime) / 300 + 1;
        uint256 sinceDays = (block.timestamp - createTime) / 24 / 3600 + 1;

        uint256 totalRelease;
        // 第一轮计算
        if (sinceDays <= 180) {
            totalRelease += sinceDays * 35000000;
            sinceDays = 0;
        } else {
            totalRelease += 180 * 35000000;
            sinceDays -= 180;
        }

        // 后面轮次计算
        if (sinceDays > 0) {
            uint256 times = (sinceDays - 1) / 180;
            uint256 base = 427 * 10**8;
            // 之前的轮次
            for (uint256 i = 0; i < times; i++) {
                uint256 tTotal = base / 10;
                totalRelease += tTotal;
                base -= tTotal;
            }
            // 这一轮
            totalRelease += (base * sinceDays) / 180;
        }

        return totalRelease - coinReleased;
    }

    function releaseCoin() public onlyOwner {
        uint256 amount = canReleaseCoinNumber();
        require(amount > 0, "no release coin");
        coinReleased += amount;
        _mint(_owner, amount * 10**_decimals);
    }

    function _transfer(
        address sender,
        address recipient,
        uint256 amount
    ) internal {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");

        _balances[sender] = _balances[sender].sub(
            amount,
            "ERC20: transfer amount exceeds balance"
        );

        uint256 rate = 0;

        bool takeFee = true;
        if (isExcluded[sender] || isExcluded[recipient]) {
            takeFee = false;
        }

        // 买/撤 不扣
        // 卖/加 扣
        if (sender == uniswapV2Pair) {
            takeFee = false;
        }

        if (takeFee) {
            uint256 deadAmount = amount.div(100).mul(3);
            _balances[_deadAddress] = _balances[_deadAddress].add(deadAmount);
            emit Transfer(sender, _deadAddress, deadAmount);

            rate = 3;
        }

        uint256 receiveAmount = amount.mul(100 - rate).div(100);
        _balances[recipient] = _balances[recipient].add(receiveAmount);
        emit Transfer(sender, recipient, receiveAmount);
    }

    function _mint(address account, uint256 amount) internal {
        require(account != address(0), "ERC20: mint to the zero address");

        _totalSupply = _totalSupply.add(amount);
        _balances[account] = _balances[account].add(amount);
        emit Transfer(address(0), account, amount);
    }

    function _burn(address account, uint256 amount) internal {
        require(account != address(0), "ERC20: burn from the zero address");

        _balances[account] = _balances[account].sub(
            amount,
            "ERC20: burn amount exceeds balance"
        );
        _totalSupply = _totalSupply.sub(amount);
        emit Transfer(account, address(0), amount);
    }

    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) internal {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }
}